
<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Size</th>
      <th>Price</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.kind %></td>
        <td><%= room.size %></td>
        <td><%= room.price %></td>
        <td><%= room.note %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to "Delete", room_path(room), :confirm => "Are you sure?", :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
